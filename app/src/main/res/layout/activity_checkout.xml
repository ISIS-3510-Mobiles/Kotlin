<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <!-- RecyclerView para mostrar los productos del carrito -->

    <!-- Price summary -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_cart_items"
        android:layout_width="391dp"
        android:layout_height="310dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@id/price_summary"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="6dp"
        tools:listitem="@layout/activity_item_product_card_checkout" />


    <LinearLayout
        android:id="@+id/price_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/recycler_view_cart_items"
        tools:layout_editor_absoluteX="51dp">

        <TextView
            android:id="@+id/payment_methods_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Payment Method"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/price_summary"
            tools:ignore="MissingConstraints" />

        <Spinner
            android:id="@+id/payment_methods_spinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/payment_methods_label" />
    </LinearLayout>

    <Button
        android:id="@+id/checkout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Checkout $258.0"
        android:backgroundTint="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
